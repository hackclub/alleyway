---
const overview_pages = [
    { title: "Overview", href: "/docs/overview" },
    { title: "Project Guidelines", href: "/docs/guidelines" },
    { title: "Submit Your Design", href: "/docs/submitting" },
    { title: "Video Logging", href: "/docs/video-logging" },
    { title: "FAQ", href: "/docs/faq" },
];

const info = [{ title: "Part Sourcing", href: "/docs/sourcing" }];
---

<aside class="p-4 bg-neutral-900 text-neutral-100 w-full max-w-xs rounded-xl">
    <nav class="space-y-2">
        {
            overview_pages.map((link) => (
                <a
                    href={link.href}
                    class="block px-4 py-2 rounded-lg bg-neutral-800 hover:bg-neutral-700 transition text-center text-sm font-medium"
                >
                    {link.title}
                </a>
            ))
        }
    </nav>

    <div class="mt-6">
        <p class="text-xs font-semibold text-neutral-400 mb-2">Extra info:</p>
        <div class="space-y-2">
            {
                info.map((link) => (
                    <a
                        href={link.href}
                        class="block px-4 py-2 rounded-lg bg-neutral-800 hover:bg-neutral-700 transition text-center text-sm font-medium"
                    >
                        {link.title}
                    </a>
                ))
            }
        </div>
    </div>
</aside>
