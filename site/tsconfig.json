{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "baseUrl": ".", // Important: Set baseUrl for paths to work correctly
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@lib/*": ["src/lib/*"],
            "@styles/*": ["src/styles/*"],
            "@auth": ["src/auth.ts"]
        }
    }
}
